@page
@model backend.Pages.Admin.Program.AddModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Add Program";
}

<div class="container px-6 mx-auto grid">
            <h2
              class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"
            >
              Add Program
            </h2>
           
           
            <form method="POST" class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800 grid grid-cols-3 gap-x-3">
                <label class="block text-sm col-span-2 ">
                    <span class="text-gray-700 dark:text-gray-400">Program Name</span>
                    <input
                    class="block w-full md:w-3/4 mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                     asp-for="ProgramHeadForm.ProgramName"
                    />
                    <span asp-validation-for="ProgramHeadForm.ProgramName" class="text-xs text-red-600 dark:text-red-400"></span>
                    
                </label>
                <label class="block mt-4 text-sm col-span-2">
                    <span class="text-gray-700 dark:text-gray-400">
                    Program Head
                    </span>
                    <select
                    asp-for="ProgramHeadForm.ProgramHeadId"
                    asp-items="Model.SelectProgramHead"
                    class="block w-1/2 mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-select focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray"
                    >
                    </select>
                    <span asp-validation-for="ProgramHeadForm.ProgramHeadId" class="text-xs text-red-600 dark:text-red-400">
                    </span>
                </label>
                <div class="flex justify-end mt-5 col-span-3">
                    <button type="submit"
                    class="flex items-center justify-between  px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-450 bg-purple-800 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"
                    >
                    Add Program
                    </button>
                </div>
            </form>
</div>