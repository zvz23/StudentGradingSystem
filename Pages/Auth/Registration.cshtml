@page
@model RegistrationModel
@{
    ViewData["Title"] = "Registration";
}

<div class="h-full grid md:grid-cols-3 grid-cols-1">
    <div class="col-span-1"></div>
    <div class="col-span-1 flex justify-center items-center">
        <div>
            @(HttpContext.Session.GetString("signup_message"))
        </div>
        <form method="post" class="w-full grid grid-cols-1 md:grid-cols-2 gap-3">
            <div class="grid-cols-2 md:grid-cols-1">
                <label class="block text-slate-500">School ID:</label>
                <input asp-for="SignupForm.SchoolId" class="bg-slate-200 rounded-md p-1.5 text-gray-900 w-full" />
                <span asp-validation-for="SignupForm.SchoolId" class="text-red-500 text-sm"></span>
            </div>
            <div class="grid-cols-2"></div>
            <div class="grid-cols-2 md:grid-cols-1">
                <label class="block ">First Name:</label>
                <input asp-for="SignupForm.FirstName" class="bg-slate-200 rounded-md p-1.5 text-gray-900 w-full" />
                <span asp-validation-for="SignupForm.FirstName" class="text-red-500 text-sm"></span>

            </div>
            <div class="grid-cols-2 md:grid-cols-1">
                <label class="block ">Last Name:</label>
                <input asp-for="SignupForm.LastName" class="bg-slate-200 rounded-md p-1.5 text-gray-900 w-full" />
                <span asp-validation-for="SignupForm.LastName" class="text-red-500 text-sm"></span>

            </div>
            <div class="grid-cols-2 md:grid-cols-1">
                <label class="block ">Email:</label>
                <input asp-for="SignupForm.Email" class="bg-slate-200 rounded-md p-1.5 text-gray-900 w-full" />
                <span asp-validation-for="SignupForm.Email" class="text-red-500 text-sm"></span>

            </div>
            <div class="grid-cols-1"></div>
           
            
            <div class="grid-cols-2 md:grid-cols-1">
                <label class="block ">Password:</label>
                <input asp-for="SignupForm.Password" class="bg-slate-200 rounded-md p-1.5 text-gray-900 w-full" />
                <span asp-validation-for="SignupForm.Password" class="text-red-500 text-sm"></span>

            </div>
            <div class="grid-cols-2 md:grid-cols-1">
                <label class="block ">Confirm Password:</label>
                <input asp-for="SignupForm.PasswordConfirm" class="bg-slate-200 rounded-md p-1.5 text-gray-900 w-full" />
                <span asp-validation-for="SignupForm.PasswordConfirm" class="text-red-500 text-sm"></span>

            </div>
            <div class="grid-cols-2">
                <button type="submit" class="font-medium text-white bg-indigo-600 hover:bg-indigo-700 py-2 px-3 rounded">Login</button>
            </div>
            
        </form>
    </div>
    <div class="col-span-1"></div>
</div>